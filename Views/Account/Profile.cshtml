@model WebsiteTMDT.Data.User

@{
    ViewData["Title"] = "Thông Tin Cá Nhân";
}

<div class="container mt-4">
    <h2 class="mb-4">Thông Tin Cá Nhân</h2>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Họ và Tên: @Model.FullName</h5>
            <p class="card-text"><strong>Email:</strong> @Model.Email</p>
            <p class="card-text"><strong>Số điện thoại:</strong> @Model.Phone</p>
            <p class="card-text"><strong>Địa chỉ:</strong> @Model.Address</p>
            <p class="card-text"><strong>Ngày tạo tài khoản:</strong> @Model.CreatedAt?.ToString("dd/MM/yyyy")</p>
        </div>
    </div>

    <a asp-action="EditProfile" class="btn btn-primary mt-3">Chỉnh sửa thông tin</a>
</div>
